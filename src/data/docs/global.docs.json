              }
            }
          },
          "200": {
            "examples": {
              "application/json": {
                "status": 200,
                "message": "Пользователь авторизован",
                "body": {
                  "user": "UserClass",
                  "token": "adwkndjasbdkhagwbdasbdkbhagwi7dey1872hdkjab"
                }
              }
            }
          }
        }
      }
